  </div>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Preparation date</th>
        <th>Description</th>

        <th></th>
      </tr>
    </thead>
    <tbody>
  <%= for field_preparation_data <- @field_preparation_data do %>
