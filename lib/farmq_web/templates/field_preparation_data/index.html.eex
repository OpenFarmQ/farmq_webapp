  <%= link raw('<i class="material-icons"> add </i>'), to: Routes.field_preparation_data_path(@conn, :new, crop_cycle: @conn.params["id"]), class: "btn btn-sm bg-green text-white float-right" %></span>
  <h3>Field preparation data</h3>
<%= if @field_preparation_data == [] do %>
  <div class="alert alert-secondary" role="alert">
